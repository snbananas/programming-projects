import java.util.Random;
import java.util.Scanner;

public class programming_project_3_17_pig {
	
	public static int p1_total;
	public static int p2_total;
	public static int p1_turn_total;
	public static int p2_turn_total;
	public static int p1_turn;
	public static int p2_turn;
	public static String p1_turn_choice;
	public static String p2_turn_choice;

	public static void main(String[] args) {
		System.out.println("Welcome to the Pig game! Let's start!");
		System.out.println("Player 1 goes first, then player 2.");
		// sees when a player reaches 100 points and wins the game
		while((p1_total < 100) && (p2_total < 100)) {
			gameplay_p1();
			if (p1_total >= 100) {
				break;
			}
			gameplay_p2();
		}
		if (p1_total >= 100) {
			System.out.println("Player 1 won the game with a total score of " + p1_total + ".");
		}
		if (p2_total >= 100) {
			System.out.println("Player 2 won the game with a total score of " + p2_total + ".");
		}
	}
	
	// player 1's playing turn
	public static void gameplay_p1() {
		p1_turn_total = 0;
		p1_turn_choice = "R";
		System.out.println("Player 1, this is your turn!");
		while (p1_turn_choice.equalsIgnoreCase("R")) {
			Random rand = new Random();
			// dice rolled for player 1
			p1_turn = rand.nextInt(6) + 1;
			System.out.println("Player 1, you rolled a " + p1_turn + ".");
			// if statement for dice numbers 2-6
			if (p1_turn != 1) {
				Scanner input = new Scanner(System.in);
				p1_turn_total += p1_turn;
				System.out.println("Player 1's total turn score so far is " + p1_turn_total);
				System.out.println("Would you like to roll or bank your points?");
				p1_turn_choice = input.next();
			}
			// if statement for dice number 1
			if (p1_turn == 1) {
				p1_turn_total = 0;
				System.out.println("Oh no! You rolled a 1 so sadly your points get voided :( Sorry!");
				p1_turn_choice.equalsIgnoreCase("B");
				break;
			}
		}
		p1_total += p1_turn_total;
		System.out.println("Player 1's total number of points so far is " + p1_total);
	}

	
	// player 2's playing turn
	public static void gameplay_p2() {
		p2_turn_total = 0;
		p2_turn_choice = "R";
		System.out.println("Player 2, this is your turn!");
		while (p2_turn_choice.equalsIgnoreCase("R")) {
			Random rand = new Random();
			// dice rolled for player 2
			p2_turn = rand.nextInt(6) + 1;
			System.out.println("Player 2, you rolled a " + p2_turn + ".");
			// if statement for dice numbers 2-6
			if (p2_turn != 1) {
				Scanner input = new Scanner(System.in);
				p2_turn_total += p2_turn;
				System.out.println("Player 2's total turn score so far is " + p2_turn_total);
				System.out.println("Would you like to roll or bank your points?");
				p2_turn_choice = input.next();
			}
			// if statement for dice number 1
			if (p2_turn == 1) {
				p2_turn_total = 0;
				System.out.println("Oh no! You rolled a 1 so sadly your points get voided :( Sorry!");
				p2_turn_choice.equalsIgnoreCase("B");
				break;
			}
		}
		p2_total += p2_turn_total;
		System.out.println("Player 2's total number of points so far is " + p2_total);
		
	}

}
